<mvc:View controllerName="erp2324.controller.mainView"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true">
      <Button icon="sap-icon://arrow-right" text="go to sales" type="Transparent" press="onNavToSales" />
    <Page id="page" title="Materials">
    <content>
    <Table
                id="MaterialTable"
                items="{/MaterialSet}"
            >
            <headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer/>
                    <Button icon="sap-icon://excel-attachment" press="onExport"/>
					<Button
						tooltip="Sort"
						icon="sap-icon://sort"
						press="handleSorterButtonPressed"/>
					<Button
						tooltip="Filter"
						icon="sap-icon://filter"
						press="handleFilterButtonPressed"/>

				</OverflowToolbar>
			</headerToolbar>
            <columns>
             <Column
                        id="Materials"
                        width="12em"
                    >
                        <VBox>
                            <Text text="Material number" />
                        </VBox>
                    </Column>
                 <Column
                        id="Maktx"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Material Description" />
                        </VBox>
                    </Column>
            <Column
                        id="Matkl"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Material Group" />
                        </VBox>
                    </Column>
                <Column
                        id="Mtart"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Material Type" />
                        </VBox>
                    </Column>
             <Column
                        id="Mbrsh"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Industry Sector" />
                        </VBox>
                    </Column>
                </columns>
                  <items>
                    <ColumnListItem
                        type="Navigation"
                        vAlign="Middle"
                        press=".onListItemPress"
                    >
                        <cells>
                            <ObjectIdentifier title="{Matnr}" />
                            <Text text="{Maktx}" />
                            <Text text="{Matkl}" />
                            <Text text="{Mtart}" />
                            <Text text="{Mbrsh}" />
                        </cells>
                    </ColumnListItem>
                </items>
    </Table>
    </content>
        <content />
    </Page>
</mvc:View>
